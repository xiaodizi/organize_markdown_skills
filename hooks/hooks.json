{
  "description": "Hooks for markdown-organizer plugin",
  "hooks": {
    "SessionStart": [
      {
        "matcher": "*",
        "hooks": [
          {
            "type": "command",
            "command": "${CLAUDE_PLUGIN_ROOT}/hooks/check-deps.sh"
          }
        ],
        "description": "Check and install Python dependencies (requests) on session start"
      },
      {
        "matcher": "*",
        "hooks": [
          {
            "type": "command",
            "command": "${CLAUDE_PLUGIN_ROOT}/hooks/check-update.sh"
          }
        ],
        "description": "Check for plugin updates on session start"
      }
    ]
  }
}
